{
  "name": "fly-free",
  "displayName": "FlyFree",
  "version": "0.9.2",
  "description": "A crosspost tool for SNS to Fly Free!",
  "author": "girigiribauer",
  "scripts": {
    "dev": "rm -rf build .plasmo && plasmo dev",
    "build": "plasmo build",
    "package": "plasmo build --zip",
    "test": "vitest"
  },
  "dependencies": {
    "@atproto/api": "^0.10.1",
    "@xmldom/xmldom": "^0.8.10",
    "bluebird": "^3.7.2",
    "buffer": "^6.0.3",
    "jimp": "^1.6.0",
    "parse5": "^7.1.2",
    "plasmo": "0.84.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "twitter-text": "^3.1.0",
    "xmlserializer": "^0.6.1",
    "xpath": "^0.0.34",
    "zod": "3.23.8"
  },
  "alias": {
    "fs": "./mocks/fs.ts"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "0.0.245",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/twitter-text": "^3.1.6",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "mem-storage-area": "^1.0.3",
    "msw": "^2.1.5",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "vitest": "^0.34.6",
    "vitest-chrome": "^0.1.0"
  },
  "manifest": {
    "default_locale": "en",
    "permissions": [
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icon.png",
          "assets/icon-twitter.svg",
          "assets/icon-bluesky.svg",
          "assets/icon-caution.svg",
          "assets/icon-success.svg",
          "assets/icon-paused.svg",
          "assets/icon-external.svg",
          "assets/icon-refresh.svg",
          "assets/icon-blank.svg",
          "assets/toggle-on.svg",
          "assets/toggle-off.svg",
          "options.html"
        ],
        "matches": [
          "https://twitter.com/*",
          "https://x.com/*"
        ]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
